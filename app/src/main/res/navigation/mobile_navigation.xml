<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_login"
        android:name="com.example.flood.auth.LoginFragment"
        tools:layout="@layout/login" >
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/nav_signup" />
    </fragment>

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.flood.home.HomeFragment"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/nav_signup"
        android:name="com.example.flood.auth.SignupFragment"
        tools:layout="@layout/signup" />
    <fragment
        android:id="@+id/nav_safezone"
        android:name="com.example.flood.safezone.SafeZoneFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Emergency Supply Fragment -->
    <fragment
        android:id="@+id/nav_emergencysupply"
        android:name="com.example.flood.emergencysupply.EmergencySupplyFragment"
        android:label="@string/menu_emergencysupply"
        tools:layout="@layout/fragment_emergencysupply" />

    <!-- Notification Fragment -->
    <fragment
        android:id="@+id/nav_notification"
        android:name="com.example.flood.notification.NotificationFragment"
        android:label="@string/menu_notification"
        tools:layout="@layout/fragment_notification" />

    <!-- Settings Fragment -->
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.flood.settings.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_settings" />

</navigation>
